<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textVIew_device_identifier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:text="Device Identifier"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_uuid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=" 00000000-0000-0000-0000-000000000000"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVIew_device_identifier_title" />

    <TextView
        android:id="@+id/textView_distance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Distance:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_uuid"
        app:layout_constraintTop_toBottomOf="@+id/textView_uuid" />

    <TextView
        android:id="@+id/textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0.9261188"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_distance_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_uuid" />

    <TextView
        android:id="@+id/textView_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="80"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_uuid"
        app:layout_constraintTop_toBottomOf="@+id/textView_uuid" />

    <TextView
        android:id="@+id/textView_signal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Signal Strength:"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_signal"
        app:layout_constraintTop_toBottomOf="@+id/textView_uuid" />
</androidx.constraintlayout.widget.ConstraintLayout>